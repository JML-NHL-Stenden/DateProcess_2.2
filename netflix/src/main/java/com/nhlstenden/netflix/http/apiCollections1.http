### AccountController
# Get all accounts
GET http://localhost:8080/accounts

# Get account by email
GET http://localhost:8080/accounts/email/test@example.com

# Get account by ID
GET http://localhost:8080/accounts/id/1

# Create a new account
POST http://localhost:8080/accounts
Content-Type: application/json

{
  "email": "test@example.com",
  "password": "password123",
  "role": "USER"
}

# Update an account
PUT http://localhost:8080/accounts/test@example.com
Content-Type: application/json

{
  "email": "updated@example.com",
  "password": "newpassword123",
  "role": "ADMIN"
}

# Delete an account
DELETE http://localhost:8080/accounts/test@example.com

# Block an account
PATCH http://localhost:8080/accounts/test@example.com/block

# Unblock an account
PATCH http://localhost:8080/accounts/test@example.com/unblock

# Change password for the authenticated user
PUT http://localhost:8080/accounts/self/password
Content-Type: application/json
Authorization: Bearer <token>

{
  "password": "newpassword"
}

# Delete the authenticated user's account
DELETE http://localhost:8080/accounts/self
Authorization: Bearer <token>

